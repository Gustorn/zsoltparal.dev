{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "~/*": ["web/*"],
      "@zsparal/core/*": ["core/*"],
      "@zsparal/ui/*": ["ui/*"],
      "@zsparal/api/*": ["api/*"]
    }
  },
  "include": [
    "components",
    "core",
    "pages",
    "../core/**/*.ts",
    "../core/**/*.tsx",
    "../ui/**/*.ts",
    "../ui/**/*.tsx",
    "../api/**/*.ts",
    "../api/**/*.tsx"
  ]
}
